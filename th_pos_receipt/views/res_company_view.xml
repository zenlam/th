<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="th_view_company_form_inherit" model="ir.ui.view">
        <field name="name">th.res.company.form.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='social_media']" position="after">
                <group string="Point of sale">
                    <field name="pos_footer_mesage"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
