<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_inherit_lock_screen" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.lock.screen</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='point_of_sale']" position="inside">
                <h2>Auto Lock Screen Time</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div>
                                <label string="Time" for="auto_lock_time"/>
                                <div class="text-muted">
                                    in Minute(s)
                                </div>
                                <div class="content-group mt16">
                                    <field name="auto_lock_time" colspan="4" nolabel="1"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
