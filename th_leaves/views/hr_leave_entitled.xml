<?xml version="1.0" encoding="UTF-8" ?>

<odoo>

    <record id="hr_leave_entitled_view_form" model="ir.ui.view">
        <field name="name">hr.leave.entitled.view.form</field>
        <field name="model">hr.leave.entitled</field>
        <field name="arch" type="xml">
            <form string="Leave Entitled">
                <group>
                    <field name="position_id" invisible="1"/>
                    <field name="service_year"/>
                    <field name="day_entitled"/>
                </group>
            </form>
        </field>
    </record>

    <record id="hr_leave_entitled_view_tree" model="ir.ui.view">
        <field name="name">hr.leave.entitled.view.tree</field>
        <field name="model">hr.leave.entitled</field>
        <field name="arch" type="xml">
            <tree string="Leave Entitled" editable="bottom">
                <field name="position_id" invisible="1"/>
                <field name="service_year"/>
                <field name="day_entitled"/>
            </tree>
        </field>
    </record>

</odoo>
