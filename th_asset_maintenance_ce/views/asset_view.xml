<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="maintenance_request_button_view" model="ir.ui.view">
            <field name="name">account.asset.asset.custom.form.inherit</field>
            <field name="model">account.asset.asset.custom</field>
            <field name="inherit_id" ref="odoo_account_asset.view_account_asset_asset_form"/>
            <field name="arch" type="xml">
                <xpath expr = "//div[@name = 'button_box']" position="inside">
                    <button name="show_next_maintenance"
                        type="object" string="Maintenance Request"
                        class="oe_stat_button"
                        icon="fa-ticket"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
